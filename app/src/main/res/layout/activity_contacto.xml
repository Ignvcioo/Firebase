<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".Actividades.ContactoActivity">

    <TextView
        android:id="@+id/textViewTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CRUD DE CONTACTOS"
        android:layout_centerHorizontal="true"
        android:gravity="top"
        android:textSize="25sp"
        android:layout_marginTop="50dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilBuscarPorId"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/textViewTitulo"
        android:layout_marginTop="15dp"
        android:layout_margin="10dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txtInputBuscarPorId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:hint="Buscar por nombre_apellido" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilNombre"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/tilBuscarPorId"
        android:layout_margin="10dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txtInputNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:hint="Nombre" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilApellido"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/tilNombre"
        android:layout_margin="10dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txtInputApellido"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:hint="Apellido" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilCorreo"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/tilApellido"
        android:layout_margin="10dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txtInputCorreo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:hint="Correo electrÃ³nico" />

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btnBuscar"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="425dp"
        android:backgroundTint="@color/black"
        android:text="Buscar" />

    <Button
        android:id="@+id/btnAgregar"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="425dp"
        android:backgroundTint="@color/black"
        android:layout_marginEnd="15dp"
        android:text="Agregar" />

    <Button
        android:id="@+id/btnActualizar"
        android:layout_width="180dp"
        android:backgroundTint="@color/black"
        android:layout_height="wrap_content"
        android:text="Actualizar"
        android:layout_below="@id/btnBuscar"
        android:layout_marginStart="15dp"
        android:layout_marginTop="25dp"
        android:layout_alignParentStart="true"/>

    <Button
        android:id="@+id/btnEliminar"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="Eliminar"
        android:layout_below="@id/btnBuscar"
        android:backgroundTint="@color/black"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="25dp"
        android:layout_alignParentEnd="true"/>

    <Button
        android:id="@+id/btnLista"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnBuscar"
        android:layout_alignParentEnd="true"
        android:backgroundTint="@color/black"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="15dp"
        android:text="Ver lista" />

    <Button
        android:id="@+id/btnPerfil"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/black"
        android:text="Perfil"
        android:layout_below="@id/btnBuscar"
        android:layout_marginStart="15dp"
        android:layout_marginTop="100dp"
        android:layout_alignParentStart="true"/>

</RelativeLayout>
